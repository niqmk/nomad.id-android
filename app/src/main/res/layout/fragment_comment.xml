<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ctrlplusz.anytextview.AnyTextView
        android:id="@+id/no_result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:text="@string/no_result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone"
        app:typeface="RobotoCondensed-Regular.ttf" />

    <com.allega.nomad.viewgroup.LoadMoreListView
        android:id="@+id/comment_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/comment_button" />

    <com.ctrlplusz.anytextview.AnyButton
        android:id="@+id/comment_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/background_round_border_light_gray_button"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/write_your_comment"
        android:visibility="gone"
        app:typeface="RobotoCondensed-Regular.ttf" />
</RelativeLayout>